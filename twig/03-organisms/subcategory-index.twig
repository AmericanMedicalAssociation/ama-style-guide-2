{% set layoutClass = 'container ama__subcategory-index ' %}
{% set membership, partnerPromo, subscribePromo =
  subcategoryIndex.promotionalRealEstate.membership,
  subcategoryIndex.promotionalRealEstate.partnerPromo,
  subcategoryIndex.promotionalRealEstate.subscribePromo %}

{% extends '@templates/two-column-right-75-25.twig' %}

{% block contentTop %}
  {% set searchField, displaySwitchMenu = subcategoryIndex.searchField, subcategoryIndex.displaySwitchMenu %}
  {% include '@atoms/forms/search-field-as-in-body.twig' %}
  {% include '@molecules/display-switch-menu.twig' %}
{% endblock %}

{% block contentLeft %}
  <div class="ama__subcategory-index__stubs">
    {% for stub in subcategoryIndex.articleStubs %}
      <div class="ama__subcategory-index__stub">
        {% set subCatArticleStub = stub %}
        {% include '@molecules/subcategory-page-article-stub.twig' %}
      </div>
    {% endfor %}
  </div>

  <div class="ama__subcategory-index__stubs__load-more">
    {% include '@atoms/button/button.twig' with { button : subcategoryIndex.loadMoreButton }%}
  </div>
{% endblock %}

{% block contentRight %}
  {% include '@molecules/membership/membership.twig' %}
  {% include '@molecules/partner-promo.twig' %}
  {% include '@molecules/subscribe-promo.twig' %}

{% endblock %}
