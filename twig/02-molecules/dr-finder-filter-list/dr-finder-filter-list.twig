<div class="dr-finder-filter-list">
  <div class="dr-finder-filter-list-mobile-heading">Filter Your Results
    {% include '@atoms/media/icons/svg/icon-close.twig' %}
  </div>
  {% for filter in drFinderFilterList %}
    <fieldset class="fieldgroup form-composite js-form-item form-item js-form-wrapper form-wrapper">
      <legend>
        <span class="fieldset-legend">{{ filter.title }}
          {% include '@atoms/media/icons/svg/icon-triangle.twig' %}
        </span>
      </legend>
      <div class="fieldset-wrapper">
        <div class="form-checkboxes">
          <div class="js-form-item form-item js-form-type-checkbox form-item-memberstatus-1 js-form-item-memberstatus-1">
            <div class="js-form-item form-item js-form-type-radio form-item-specialty js-form-item-specialty">
                <input data-drupal-selector="edit-specialty-all" type="radio" id="edit-specialty-all" name="specialty" value="All" checked="checked" class="form-radio">
                <label for="edit-specialty-all" class="option">- Any -</label>
              </div>
              <div class="js-form-item form-item js-form-type-radio form-item-specialty js-form-item-specialty">
                <input data-drupal-selector="edit-specialty-1" type="radio" id="edit-specialty-1" name="specialty" value="1" class="form-radio">
                <label for="edit-specialty-1" class="option">Allergy and Immunology</label>
              </div>
              <div class="js-form-item form-item js-form-type-radio form-item-specialty js-form-item-specialty">
                <input data-drupal-selector="edit-specialty-2" type="radio" id="edit-specialty-2" name="specialty" value="2" class="form-radio">
                <label for="edit-specialty-2" class="option">Anesthesiology</label>
              </div>
              <div class="js-form-item form-item js-form-type-radio form-item-specialty js-form-item-specialty">
                <input data-drupal-selector="edit-specialty-3" type="radio" id="edit-specialty-3" name="specialty" value="3" class="form-radio">
                <label for="edit-specialty-3" class="option">Cardiology</label>
              </div>
              <div class="js-form-item form-item js-form-type-radio form-item-specialty js-form-item-specialty">
                <input data-drupal-selector="edit-specialty-4" type="radio" id="edit-specialty-4" name="specialty" value="4" class="form-radio">
                <label for="edit-specialty-4" class="option">Dermatology</label>
              </div>
          </div>
          <a href="#" class="dr-finder-filter-list__menu-view-results">View Results</a>
        </div>
      </div>
    </fieldset>
  {% endfor %}
  <div class="dr-finder-filter-list-mobile__view-results">
    {% for button in drFinderFilterListButtons.results %}
      {% include '@atoms/button/button.twig' with { "button" : button } %}
    {% endfor %}
  </div>
</div>
