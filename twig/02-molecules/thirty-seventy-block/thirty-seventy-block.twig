{% set image, heading, paragraph, button1, button2 = thirtySeventyBlock.image, thirtySeventyBlock.heading, thirtySeventyBlock.paragraph, thirtySeventyBlock.button1, thirtySeventyBlock.button2 %}

<div class="thirty-seventy-block">
    <div class="thirty-seventy-block__aside{% if not image %} thirty-seventy-block_aside--full-width {% endif %}">
        {% include '@atoms/heading/heading.twig' with { heading : heading } %}
        {% include '@atoms/paragraph.twig' with { paragraph : paragraph } %}
        <div class="thirty-seventy-block__buttons{% if button2 %} double-cta {% endif %}">
            {% if button1 %}
                {% include '@atoms/button/button.twig' with { button : button1 } %}
            {% endif %}
            {% if button2 %}
                {% include '@atoms/button/button.twig' with { button : button2 } %}
            {% endif %}
        </div>
    </div>
    {% if image %}
        <div class="thirty-seventy-block__background">
            <div class="image-container">
                {% include '@atoms/image/image.twig' with { image : image } %}
            </div>
        </div>
    {% endif %}
</div>
