{% set link, image, subheading, metadata = categoryHero.link, categoryHero.image, categoryHero.subheading, categoryHero.metadata %}

<div class="ama__category-hero">
  {% include "@atoms/image/image.twig"  with { 'class': 'ama__image' } %}
  <span class="ama__category-hero__eyebrow ama__h4--purple">{{ subheading }}</span>
  <h2 class="ama__h2 ama__category-hero__title">
    {% include "@atoms/link/link.twig" %}
  </h2>
  <div class="ama__category-hero__copy">
    {% if metadata %}
      <div class="ama__category-hero__metadata">
        {% include "@molecules/article-stub/article-stub-metadata.twig" %}
      </div>
    {% endif %}
  </div>
</div>
