{
  "name": "ama-style-guide",
  "version": "1.13.5",
  "description": "A living style guide for the American Medical Association",
  "repository": "https://github.com/AmericanMedicalAssociation/AMA-style-guide",
  "main": "gulpfile.js",
  "dependencies": {
    "breakpoint-sass": "^2.7.1",
    "browser-sync": "^2.23.5",
    "gift": "^0.10.2",
    "gulp-autoprefixer": "^4.1.0",
    "gulp-bump": "^3.0.0",
    "gulp-gh-pages-gift": "^0.5.5",
    "gulp-git": "^2.5.1",
    "gulp-minify-css": "^1.2.4",
    "gulp-sass": "^3.1.0",
    "gulp-shell": "^0.6.5",
    "gulp-tag-version": "^1.3.1",
    "patch-package": "^3.6.1",
    "postcss-reporter": "^5.0.0",
    "postcss-scss": "^1.0.2",
    "sass-grid": "^3.0.0"
  },
  "devDependencies": {
    "del": "^3.0.0",
    "glob": "^7.1.2",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-clean-css": "^3.9.2",
    "gulp-concat": "^2.6.1",
    "gulp-if": "^2.0.2",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass-glob": "^1.0.8",
    "gulp-stylelint": "^6.0.0",
    "gulp-uglify": "^3.0.0",
    "run-sequence": "^2.2.0",
    "stylelint": "^8.4.0",
    "uglify": "^0.1.5"
  },
  "scripts": {
    "prepare": "npx patch-package",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Avi Schwab",
  "license": "ISC",
  "stylelint": {
    "rules": {
      "block-no-empty": true,
      "color-no-invalid-hex": true,
      "declaration-colon-space-after": "always",
      "declaration-colon-space-before": "never",
      "function-comma-space-after": "always",
      "media-feature-colon-space-after": "always",
      "media-feature-colon-space-before": "never",
      "media-feature-name-no-vendor-prefix": true,
      "max-empty-lines": 5,
      "number-leading-zero": "always",
      "number-no-trailing-zeros": true,
      "property-no-vendor-prefix": [
        true,
        {
          "severity": "warning"
        }
      ],
      "selector-list-comma-space-before": "never",
      "selector-list-comma-newline-after": "always",
      "selector-max-id": 1,
      "string-quotes": "double"
    }
  }
}
