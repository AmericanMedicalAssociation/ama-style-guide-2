{% if jamaStub.href %}
  <a
    href="{{ jamaStub.href }}"
    title="{{ jamaStub.info }}">
    {% if jamaStub.heading %}
      <span class="ama__image__text">
        {% if jamaStub.subtitle %}
          <span class="ama__image__text__subtitle">
            {{ jamaStub.subtitle }}
          </span>
        {% endif %}
        {% include "@atoms/heading/heading.twig" with { "heading" : jamaStub.heading } %}
      </span>
    {% endif %}
    {{ jamaStub.heading is not empty ? "<div class='ama__image-wrap'>" }}
    <img
      class="{{ class }} ama__image"
      alt="{{ jamaStub.alt }}"
      src="{{ jamaStub.src }}"
      height="{{ jamaStub.height }}"
      width="{{ jamaStub.width }}" />
    {{ jamaStub.heading is not empty ? "</div>" }}
  </a>
{% else %}
  <img
    class="{{ class }} ama__image"
    alt="{{ jamaStub.alt }}"
    src="{{ jamaStub.src }}"
    height="{{ jamaStub.height }}"
    width="{{ jamaStub.width }}" />
{% endif %}
