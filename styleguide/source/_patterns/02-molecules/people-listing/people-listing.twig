<div class="ama__people-listing-card">
  {% if peopleListingCard.image %}
    {% set image = peopleListingCard.image %}
    {% include "@atoms/image/image.twig"  with { 'class': 'ama__image' } %}
  {% endif %}
  <div class="ama__people-listing-card__bio">
    <div class="ama__people-listing-card__bio__heading">
      {% set heading = peopleListingCard.heading %}
      {% include "@atoms/heading/heading.twig" %}

      {% set heading = peopleListingCard.speciality.heading %}
      {% include "@atoms/heading/heading.twig" %}

      {% set paragraph = peopleListingCard.speciality.paragraph %}
      {% include "@atoms/paragraph.twig" %}
    </div>

    <div class="ama__people-listing-card__details">
      {% for detail in peopleListingCard.details %}
        {% if detail.heading %}
          {% set heading = detail.heading %}
          {% include "@atoms/heading/heading.twig" %}
        {% endif %}
        {% if detail.addresses %}
          {% for address in detail.addresses %}
            {% set paragraph = address.paragraph %}
            {% include "@atoms/paragraph.twig" %}
          {% endfor %}
        {% elseif detail.link %}
          {% set link = detail.link %}
          {% include "@atoms/link/link.twig" %}
        {% elseif detail.paragraph %}
          {% set paragraph = detail.paragraph %}
          {% include "@atoms/paragraph.twig" %}
        {% endif %}
      {% endfor %}
      
      {% if peopleListingCard.button %}
        {% set button = peopleListingCard.button %}
        {% include "@atoms/button/button.twig" %}
      {% endif %}
    </div>
  </div>
</div>
