<div class="dr-finder-filter-list">
  {% for filter in drFinderFilterList %}
    <div class="dr-finder-filter-list__menu-item">
      <button class="dr-finder-filter-list__menu-button">{{ filter.title }}
        {% include '@atoms/media/icons/svg/icon-triangle.twig' %}
      </button>
      <div class="dr-finder-filter-list__submenu">
        <div class="dr-finder-filter-list__submenu-scroll">
          {% for checkbox in filter.checkboxes %}
            <div class="dr-finder-filter-list__submenu-item">
              {% include '@atoms/forms/checkbox.twig' %}
            </div>
          {% endfor %}
        </div>
        <a href="#" class="dr-finder-filter-list__menu-view-results">View Results</a>
      </div>
    </div>
  {% endfor %}
 </div>

<div class="dr-finder-filter-list-mobile">
    <div class="dr-finder-filter-list-mobile-heading">Filter Your Results
        {% include '@atoms/media/icons/svg/icon-close.twig' %}
    </div>
    {% for filter in drFinderFilterList %}
        <div class="dr-finder-filter-list__menu-item-mobile">
            <div class="dr-finder-filter-list__menu-button-mobile">{{ filter.title }}
                {% include '@atoms/media/icons/svg/icon-opendropdownsmall.twig' %}
            </div>
            <div class="dr-finder-filter-list__submenu-mobile">
                <div class="dr-finder-filter-list__submenu-scroll-mobile">
                    {% for checkbox in filter.checkboxes %}
                        <div class="dr-finder-filter-list__submenu-item-mobile">
                            {% include '@atoms/forms/checkbox.twig' %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endfor %}
    <div class="dr-finder-filter-list__view-results">
        {% for button in drFinderFilterListButtons.results %}
            {% include '@atoms/button/button.twig' with { "button" : button } %}
        {% endfor %}
    </div>
</div>
