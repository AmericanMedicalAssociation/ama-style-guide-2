<div class="dr-finder-modal {{ type }}">
  <div class="dr-finder-modal__content">
    <span class="dr-finder-modal__close">&times;</span>
    {% set heading = modal.heading|merge({
      "level": "2",
      "class": "ama__h2"
    }) %}
    {% include '@atoms/heading/heading.twig' %}
    {{ modal.subheading|raw }}
    <div class="dr-finder-modal__actions">
      {% if modal.cancel %}
        {% include '@atoms/button/button.twig' with { "button" : modal.cancel } %}
      {% endif %}
      {% if modal.ok %}
        {% include '@atoms/button/button.twig' with { "button" : modal.ok } %}
      {% endif %}
    </div>
  </div>
</div>
