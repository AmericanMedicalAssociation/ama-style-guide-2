{% set image, heading, link = infoCard.image, infoCard.heading, infoCard.link %}

{% include "@atoms/heading.twig" %}
<div class="ama__info-card">
  {% if infoCard.image %}
      {% include "@atoms/image.twig"  with {
        "class": "ama__info-card__image"}
      %}
  {% endif %}

  <div class="ama__info-card__text">
    {% for paragraph in infoCard.paragraphs %}
      {% include "@atoms/paragraph.twig" %}
    {% endfor %}

    {% if infoCard.link %}
      {% include "@atoms/link.twig" %}
    {% endif %}
  </div>
</div>
