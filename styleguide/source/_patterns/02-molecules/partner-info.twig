{% set heading = boilerplate.heading|merge({
    "level": "3",
    "text": "About the AMA",
    "class": ""
  })
%}

<article class="ama__partner">
  {% if logo %}
      {% set image = logo %}
      {% include "@atoms/image.twig" with {
        "class": "ama__partner__logo" }
      %}
  {% endif %}

  {% if infoCard %}
    {% set image, heading, link = infoCard.image, infoCard.heading, infoCard.link %}
    {% include "@molecules/info-card.twig" %}
  {% endif %}

  {% if boilerplate %}
    <div class="ama__partner__boilerplate">
      {% set heading = boilerplate.heading %}
      {% include "@atoms/heading.twig" %}

      {% set paragraph = boilerplate.paragraph %}
      {% include "@atoms/paragraph.twig" %}
    </div>
  {% endif %}
</article>
