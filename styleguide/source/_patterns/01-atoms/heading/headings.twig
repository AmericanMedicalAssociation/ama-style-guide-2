{%
  set headerLevels = [
    {
      'level': '1',
      'class': 'ama__h1'
    },
    {
      'level': '2',
      'class': 'ama__h2'
    },
    {
      'level': '3',
      'class': 'ama__h3'
    },
    {
      'level': '4',
      'class': 'ama__h4'
    },
    {
      'level': '5',
      'class': 'ama__h5'
    },
    {
      'level': '6',
      'class': 'ama__h6'
    }
  ]
%}

{% for heading in headings %}
  {%
    set heading = heading|merge(
      {
        level: headerLevels[loop.index0].level,
        class: headerLevels[loop.index0].class
      }
    )
  %}

  {% include "@atoms/heading/heading.twig" %}
{% endfor %}
