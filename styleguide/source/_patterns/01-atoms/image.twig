{#{{ image.src is empty ? "empty" : "not empty" }}#}
{% if image.href %}
  <a
    href="{{ image.href }}"
    title="{{ image.info }}">
    {{ image.text is not empty ? "<div class='ama__image-wrap'>" }}
    <img
      class="{{ class }} ama__image"
      alt="{{ image.alt }}"
      src="{{ image.src }}"
      height="{{ image.height }}"
      width="{{ image.width }}" />
    {{ image.text is not empty ? "</div>" }}
    {% if image.text %}
      <span class="ama__image__text">
    {{ image.text }}
  </span>
    {% endif %}
  </a>
{% else %}
  <img
    class="{{ class }} ama__image"
    alt="{{ image.alt }}"
    src="{{ image.src }}"
    height="{{ image.height }}"
    width="{{ image.width }}" />
{% endif %}
