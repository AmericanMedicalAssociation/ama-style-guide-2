<ol class="listicle">
  {% for list in listicle %}
		<li>
			<h2>{% if list.link %}<a href="{{ list.link }}">{% endif %}{{ list.text|raw }}{% if list.link %}</a>{% endif %}</h2>	
		{% if list.description %}
			<ol>
				{% for sublist in list.description %}
					<li>{{ sublist.text|raw }}</li>
				{% endfor %}
			</ol>
    {% endif %}
    </li>
	{% endfor %}
</ol>