{%  set
  indented, link, heading, subtitle, date, social =
  masthead.indented ? "ama__masthead__content--indented" : "",
  masthead.link,
  masthead.heading|merge({
    "level": "1",
    "class": "ama__h1"
  }),
  masthead.subtitle,
  masthead.date,
  masthead.social
%}

<header class="ama__masthead">
  <div class="ama__masthead__sidebar" role="complementary"></div>
  <div class="ama__masthead__content {{ indented }}" role="complementary">
    <div class="ama__masthead__content__title__container">
      <div class="ama__masthead__content__title">
        {% if masthead.link.title %}
          {% include "@atoms/link/link.twig" %}
        {% endif %}

        {% include "@atoms/heading/heading.twig" %}
        {% if subtitle %}
          {% include "@atoms/subtitle.twig" %}
        {% endif %}
        </div>
        {% if button %}
          <div class="ama__masthead__content__event__button">
            {% include "@atoms/button/button.twig" %}
          </div>
        {% endif %}
    </div>

    <div class="ama__masthead__content__container">
      {% if masthead.date.month %}
        <div class="ama__masthead__content__date">
          {% include "@atoms/date-block.twig" %}
        </div>
      {% endif %}
      {% if masthead.social %}
        <div class="ama__masthead__content__share">
          {% include "@molecules/social-share.twig" %}
        </div>
      {% endif %}
    </div>
  </div>
</header>
