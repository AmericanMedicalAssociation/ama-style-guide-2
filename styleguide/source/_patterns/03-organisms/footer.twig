<footer class="ama__footer">
  <div class="container ama__footer__container">
    {% include "@atoms/heading.twig" %}

    <div class="ama__footer__menu-container">
      {% include "@molecules/social-share.twig" %}

      <div class="ama__rule ama__rule--horizontal"></div>

        <div class="ama__footer__menu-secondary-user">
          {% for column in menus.secondaryUser %}
            <ul>
              {% for link in column %}
                <li>
                  {% include "@atoms/link.twig" with {"class" : "ama__link--black"} %}
                </li>
              {% endfor %}
            </ul>
          {% endfor %}
        </div>

    </div>

    {% include "@atoms/copyright.twig" %}

    <ul class="ama__footer__menu-utility">
      {% for link in menus.utility %}
        <li>
          {% include "@atoms/link.twig" with {"class" : "ama__link--black"} %}
        </li>
      {% endfor %}
    </ul>
  </div>
</footer>
