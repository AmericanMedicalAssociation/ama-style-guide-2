{% set layoutClass = 'container ama__category-index ' %}
{% set membership, partnerPromo, subscribePromo =
  categoryIndex.promotionalRealEstate.membership,
  categoryIndex.promotionalRealEstate.partnerPromo,
  categoryIndex.promotionalRealEstate.subscribePromo %}

{% extends '@templates/two-column-right-75-25.twig' %}

{% block contentTop %}
{% endblock %}

{% block contentLeft %}
  {% include "@atoms/content-grouping-header.twig" with { contentGroupingHeader : categoryIndex.contentGroupingHeader } %}
  <div class="ama__category-index__stubs">
    {% for stub in categoryIndex.articleStubs %}
      {% set subCatArticleStub = stub %}
      {% include '@molecules/subcategory-page-article-stub.twig' %}
    {% endfor %}
  </div>

  <div class="ama__category-index__stubs__load-more">
    {% include '@atoms/button/button.twig' with { button : categoryIndex.loadMoreButton }%}
  </div>
{% endblock %}

{% block contentRight %}
  {% include '@molecules/partner-promo.twig' %}
  {% include '@molecules/subscribe-promo.twig' %}

{% endblock %}
